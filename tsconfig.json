{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@adapters/*": ["./application/src/adapters/*"],
      "@config/*": ["./application/src/config/*"],
      "@config": ["./application/src/config/index.ts"],
      "@domain/*": ["./application/src/domain/*"],
      "@entity/*": ["./application/src/entity/*"],
      "@repositories/*": ["./application/src/repositories/*"],
      "@errors/*": ["./application/src/errors/*"],
      "@schemas/*": ["./application/src/schemas/*"],
      "@shared/*": ["./application/src/shared/*"],
      "@shared": ["./application/src/shared/index.ts"],
      "@models/*": ["application/src/models/*"],
      "@dto/*": ["application/src/dto/*"],
      "@use-cases/*": ["./application/src/use-cases/*"],
      "@packages/*": ["./packages/*"],
      "@events/*": ["application/src/events/*"]
    },
    "outDir": "./dist"
  },
  "include": ["application/**/*"],
  "exclude": ["node_modules", "cdk.out"]
}
